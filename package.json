{
  "name": "@hiberbee/actions",
  "version": "1.0.0",
  "private": true,
  "readme": "README.md",
  "description": "Bundle of Dev/Test/Ops Github Actions for Cloud-Native apps CI/CD pipelines execution",
  "keywords": [
    "github-actions",
    "ci-cd",
    "devops"
  ],
  "author": {
    "name": "Vlad Volkov",
    "url": "https://github.com/vladyslavvolkov",
    "email": "vlad@hiberbee.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiberbee/actions.git"
  },
  "engines": {
    "yarn": ">=1.20"
  },
  "scripts": {
    "clean": "rimraf build",
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "cross-env RUNNER_TEMP=build jest",
    "build": "tsc && ncc build",
    "build:all": "yarn clean && yarn format && yarn lint && yarn build:helm && yarn build:skaffold && yarn build:minikube && yarn build:kops",
    "build:helm": "yarn build build/helm.js --out helm/src",
    "build:skaffold": "yarn build build/skaffold.js --out skaffold/src",
    "build:minikube": "yarn build build/minikube.js --out minikube/src",
    "build:kops": "yarn build build/kops.js --out kops/src"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2",
    "@actions/cache": "^1.0.2",
    "@actions/tool-cache": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@zeit/ncc": "^0.22.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "istanbul": "^0.4.5",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "prettier": "^2.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build:all && git add ."
    }
  }
}
